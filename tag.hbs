{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{#tag}}

  {{!-- custom Styles For tag <body> --}}
  {{#contentFor "special_body_class"}}is-tag{{/contentFor}}

    <section class="relative tag py-12 md:py-vw6 bg-gray-150">

      {{!-- Featured Media - partials/components/media-cover.hbs --}}
      {{> "components/media-cover" background=feature_image alt_title=title}}

      <div class="container relative z-3 mx-auto px-4 max-w-5xl text-center">

        <h1 class="capitalize text-4xl text-title text-white text-shadow-lg lg:text-5xl">
          {{name}}
        </h1>

        {{#if false}}
          <div class="text-center text-white font-medium mt-8">
            <a class="hover:text-primary" href="{{@site.url}}">{{t "Home"}}</a>
            <svg class="icon h-3 w-3">
              <use xlink:href="#icon-arrow-forward"></use>
            </svg>
            <span class="text-gray-500">{{t "Posts Tagged"}} "{{name}}"</span>
          </div>
        {{/if}}

        {{#if description}}
          <p class="tag-description text-xl mt-5 font-serif max-w-xl mx-auto">
            <span>{{description}}</span>
          </p>
        {{/if}}

      </div>
    </section>
{{/tag}}

{{!-- The tag below includes the post loop - partials/loop.hbs --}}
{{>"loop"}}
