{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{#tag}}

  {{!-- custom Styles For tag <body> --}}
  {{#contentFor "special_body_class"}}is-tag{{/contentFor}}

    <section class="relative tag min-h-52 bg-gray-150 flex flex-col items-stretch ">

      {{!-- Featured Media - partials/components/media-cover.hbs --}}
      {{> "components/media-cover" background=feature_image alt_title=title}}

      <div class="container grow relative z-3 mx-auto p-3 max-w-5xl
       text-center flex flex-col justify-between">

        <h1 class="capitalize text-4xl text-title text-white
         text-shadow-lg lg:text-5xl">
          {{name}}
        </h1>

        {{#if false}}
          <div class="text-center text-white font-medium mt-8">
            <a class="hover:text-primary" href="{{@site.url}}">{{t "Home"}}</a>
            <svg class="icon h-3 w-3">
              <use xlink:href="#icon-arrow-forward"></use>
            </svg>
            <span class="text-gray-500">{{t "Posts Tagged"}} "{{name}}"</span>
          </div>
        {{/if}}

        {{#if description}}
          <p class="tag-description text-xl mt-5 font-serif max-w-xl mx-auto">
            <span class="text-gray-800">{{description}}</span>
          </p>
        {{/if}}

      </div>

   {{!-- Intro article for tag --}}
   {{#get "pages" limit="1" filter="featured:true+tags:{{slug}}" as |godo_featured_post| }}
        {{#if godo_featured_post}}
            {{#foreach godo_featured_post}}
                {{> "story/tag-featured"}}
            {{/foreach}}
        {{/if}}
    {{/get}}


    </section>

{{/tag}}



{{!-- The tag below includes the post loop - partials/loop.hbs --}}
{{>"loop"}}
